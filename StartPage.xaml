<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OlympFoodClient.StartPage" Title="Load Athletic Kitchen Mobile..." BackgroundImage="back.png">

    <StackLayout VerticalOptions="CenterAndExpand">
        <!--<Image Source="back.png"/>-->
        <Button x:Name="btnStart" Text="RUN!" Command="{Binding StartCommand}" IsEnabled="{Binding IsLoaded}" 
                BackgroundColor="DarkOrange" TextColor="White" HeightRequest="80" FontSize="20" Clicked="btnStart_Clicked"/>
        <ProgressBar Progress="{Binding ProgressValue}" />
    </StackLayout>
</ContentPage>