<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OlympFoodClient.DishPage" Title="Dish info">
    <StackLayout>
        <Label x:Name="lblMessage" Text="{Binding ViewModel.StatementText}" />
        <StackLayout>
            <Label Text="Name" />
            <Label Text="{Binding Path=Model.Name}" FontSize="Medium" />
            <Label Text="Energy value" />
            <Label Text="{Binding Path=Model.Energy_value}" FontSize="Medium" />
            <Label Text="Price" />
            <Label Text="{Binding Path=Model.Price}" FontSize="Medium" />
        </StackLayout>
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
            <Button Text="Back" Command="{Binding Path=ViewModel.BackCommand}" />
            <Button Text="Order" Command="{Binding Path=ViewModel.DishToOrderCommand}" IsVisible="{Binding ViewModel.IsOnlineMode}"/>
        </StackLayout>
        <Label IsVisible="{Binding ViewModel.IsOfflineMode}" Text="Offline-mode" />
        <Label IsVisible="{Binding ViewModel.IsOnlineMode}" Text="Online-mode" />
        
    </StackLayout>
</ContentPage>