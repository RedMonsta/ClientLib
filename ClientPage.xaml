<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OlympFoodClient.ClientPage" Title="Вход в профиль">
    <StackLayout>
        <Label x:Name="lblMessage" Text="{Binding ViewModel.StatementText}" />
        <Label x:Name="lblLogin" Text="Логин" />
        <Entry Text="{Binding Path=ClientParam.Login}" FontSize="Medium" />
        <Label Text="Пароль" />
        <Entry Text="{Binding Path=ClientParam.Password}" FontSize="Medium" IsPassword="True" />
        <Button Text="Войти" Command="{Binding ViewModel.SignInCommand}" CommandParameter="{Binding ClientParam}" IsEnabled="{Binding ViewModel.IsOnlineMode}" />
        <Button Text="Регистрация" Command="{Binding ViewModel.GoToRegistrationCommand}" IsEnabled="{Binding ViewModel.IsOnlineMode}"/>

        <Label IsVisible="{Binding ViewModel.IsOfflineMode}" Text="Вы находитесь в оффлайн-режиме" />
        <Button IsVisible="{Binding ViewModel.IsOfflineMode}" Text="Переподключиться" Command="{Binding ViewModel.TryToConnectCommand}"/>

    </StackLayout>
</ContentPage>