<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OlympFoodClient.ClientPage" Title="Authorization">
    <StackLayout>
        <Label x:Name="lblMessage" Text="{Binding ViewModel.StatementText}" />
        <Label x:Name="lblLogin" Text="Login" />
        <Entry Text="{Binding Path=ClientParam.Login}" FontSize="Medium" />
        <Label Text="Password" />
        <Entry Text="{Binding Path=ClientParam.Password}" FontSize="Medium" IsPassword="True" />
        <Button Text="Sign In" Command="{Binding ViewModel.SignInCommand}" CommandParameter="{Binding ClientParam}" IsVisible="{Binding ViewModel.IsOnlineMode}" IsEnabled="{Binding ViewModel.IsLoaded}" />
        <Button Text="Registration" Command="{Binding ViewModel.GoToRegistrationCommand}" IsVisible="{Binding ViewModel.IsOnlineMode}" IsEnabled="{Binding ViewModel.IsLoaded}"/>

        <Label IsVisible="{Binding ViewModel.IsOfflineMode}" Text="Offline-mode" />
        <Button IsVisible="{Binding ViewModel.IsOfflineMode}" Text="Reconnect" Command="{Binding ViewModel.TryToConnectCommand}"/>

    </StackLayout>
</ContentPage>